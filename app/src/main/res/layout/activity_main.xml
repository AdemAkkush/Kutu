<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mavi"
    app:layout_scrollFlags="scroll"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clipToPadding="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/main_addMedicine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.5"
            android:layout_margin="5dp"
            android:backgroundTint="@color/lacivert"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/add_medicine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="İlaç Ekle"
                android:textColor="@color/beyaz"
                android:textSize="24sp"
                android:typeface="normal"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_showMedicine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.5"
            android:layout_margin="5dp"
            android:backgroundTint="@color/lacivert"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/medicine" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Göster"
                android:textColor="@color/beyaz"
                android:textSize="24sp"
                android:textStyle="bold"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_tutorial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.5"
            android:layout_margin="5dp"
            android:backgroundTint="@color/lacivert"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/tutorial" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Kılavuz"
                android:textColor="@color/beyaz"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/main_settings"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="0.5"
            android:layout_columnWeight="0.5"
            android:layout_margin="5dp"
            android:backgroundTint="@color/lacivert"
            app:cardCornerRadius="10dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/settings" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:text="Ayarlar"
                android:textColor="@color/beyaz"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>